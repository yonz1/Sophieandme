<Page
    x:Class="WpfApp2.Windows.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fs="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:WpfApp2.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    d:DesignHeight="740"
    d:DesignWidth="980"
    Background="Transparent"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/ButtonStyle.xaml" />
                <ResourceDictionary Source="/Style/Dark_theme.xaml" />
                <ResourceDictionary Source="/Style/General.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>



    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="34" />
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock
                x:Name="Usernamebox"
                Margin="30,0,0,0"
                FontSize="26"
                Foreground="White"
                Text="Username" />
        </Grid>
        <Grid Grid.Row="1">
            <DockPanel>
                <Button
                    x:Name="General"
                    Margin="30,0,0,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Click="General_Click"
                    Content="General"
                    DockPanel.Dock="Left"
                    Style="{StaticResource MaterialDesignFlatLightButton}" />
                <Button
                    x:Name="Security"
                    Margin="30,0,0,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Click="Security_Click"
                    Content="Security"
                    DockPanel.Dock="Left"
                    Style="{StaticResource MaterialDesignFlatLightButton}" />
                <Button
                    x:Name="Apps"
                    Margin="30,0,0,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Click="Apps_Click"
                    Content="Apps"
                    DockPanel.Dock="Left"
                    Style="{StaticResource MaterialDesignFlatLightButton}" />
                <Button
                    x:Name="Contact"
                    Margin="30,0,0,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Click="Contact_Click"
                    Content="Contact"
                    DockPanel.Dock="Left"
                    Style="{StaticResource MaterialDesignFlatLightButton}" />
                <Button
                    x:Name="Credits"
                    Margin="30,0,0,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Click="Credits_Click"
                    Content="Credits"
                    DockPanel.Dock="Left"
                    Style="{StaticResource MaterialDesignFlatLightButton}" />
            </DockPanel>
        </Grid>
        <Frame
            Name="fcontainer"
            Grid.Row="2"
            Background="Transparent"
            BorderBrush="#303030"
            BorderThickness="0"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
