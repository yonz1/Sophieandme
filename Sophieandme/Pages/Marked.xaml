<Page
    x:Class="Sophieandme.Pages.Marked"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fs="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Sophieandme.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Marked"
    d:DesignHeight="740"
    d:DesignWidth="1280"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="10"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">


    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/ButtonStyle.xaml" />
                <ResourceDictionary Source="/Style/Dark_theme.xaml" />
                <ResourceDictionary Source="/Style/General.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid x:Name="Selection" Visibility="Visible">

            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Border
                Background="Transparent"
                BorderThickness="2"
                CornerRadius="20">
                <DockPanel
                    Height="60"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent">
                    <RadioButton
                        x:Name="MathsM"
                        Width="120"
                        Height="40"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="20"
                        Background="Transparent"
                        Click="MathsM_Click"
                        Content="Maths"
                        DockPanel.Dock="Left"
                        Foreground="{StaticResource Textcolor}"
                        Style="{StaticResource topquizzmat}"
                        Tag="Mathématiques" />
                    <RadioButton
                        x:Name="PhysiqueM"
                        Width="120"
                        Height="40"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="20"
                        Background="Transparent"
                        Click="PhysiqueM_Click"
                        Content="Physique"
                        DockPanel.Dock="Left"
                        Foreground="{StaticResource Textcolor}"
                        Style="{StaticResource topquizzmat}"
                        Tag="Physique" />
                    <RadioButton
                        x:Name="SIM"
                        Width="120"
                        Height="40"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="20"
                        Background="Transparent"
                        Click="SIM_Click"
                        Content="SI"
                        DockPanel.Dock="Left"
                        Foreground="{StaticResource Textcolor}"
                        Style="{StaticResource topquizzmat}"
                        Tag="SI" />
                    <RadioButton
                        x:Name="AllM"
                        Width="120"
                        Height="40"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="20"
                        Background="Transparent"
                        Click="AllM_Click"
                        Content="All"
                        DockPanel.Dock="Left"
                        Foreground="{StaticResource Textcolor}"
                        Style="{StaticResource topquizzmat}"
                        Tag="All" />
                    <RadioButton
                        x:Name="Quizz"
                        Width="120"
                        Height="40"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="20"
                        Background="Transparent"
                        Click="Quizz_Click"
                        Content="Quizz"
                        DockPanel.Dock="Left"
                        Foreground="{StaticResource Textcolor}"
                        Style="{StaticResource topquizzmat}"
                        Tag="All" />
                </DockPanel>
            </Border>
            <wv2:WebView2
                x:Name="webviewall"
                Grid.Row="1"
                Margin="30"
                Source="file:///C:/Users/Bastien/source/repos/Sophieandme/Sophieandme/Math.html"
                Visibility="Collapsed" />
        </Grid>
    </Grid>
</Page>
