<Page
    x:Class="Sophieandme.Pages.Quizz"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fs="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Sophieandme.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:math="clr-namespace:CSharpMath.Forms;assembly=CSharpMath.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Quizz"
    d:DesignHeight="740"
    d:DesignWidth="1280"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="10"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/ButtonStyle.xaml" />
                <ResourceDictionary Source="/Style/Dark_theme.xaml" />
                <ResourceDictionary Source="/Style/General.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid>

        <!--  ########################################################## Panel d'affichage des matiére disponible  -->

        <Grid
            x:Name="Selection"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Visible">


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <RadioButton
                x:Name="Maths"
                Grid.Row="0"
                Grid.Column="0"
                Width="250"
                Height="230"
                Margin="40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource Elementbackground}"
                Click="Maths_Click"
                Style="{StaticResource Quizz_button}">
                <StackPanel>
                    <fs:IconImage
                        Width="50"
                        Height="50"
                        Foreground="{StaticResource Iconcolor}"
                        Icon="DiceD20"
                        Style="{StaticResource NewMButtonIcon}" />
                    <TextBlock
                        Margin="0,20,0,0"
                        VerticalAlignment="Bottom"
                        Foreground="{StaticResource Textcolor}"
                        Style="{StaticResource NewMButtonText}"
                        Text="Mathématiques" />
                </StackPanel>
            </RadioButton>

            <RadioButton
                x:Name="Physique"
                Grid.Row="0"
                Grid.Column="1"
                Width="250"
                Height="230"
                Margin="40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource Elementbackground}"
                Click="Physique_Click"
                Style="{StaticResource Quizz_button}">
                <StackPanel>
                    <fs:IconImage
                        Width="50"
                        Height="50"
                        Foreground="{StaticResource Iconcolor}"
                        Icon="Atom"
                        Style="{StaticResource NewMButtonIcon}" />
                    <TextBlock
                        Margin="0,20,0,0"
                        VerticalAlignment="Bottom"
                        Foreground="{StaticResource Textcolor}"
                        Style="{StaticResource NewMButtonText}"
                        Text="Physique" />
                </StackPanel>
            </RadioButton>

            <RadioButton
                x:Name="SI"
                Grid.Row="0"
                Grid.Column="2"
                Width="250"
                Height="230"
                Margin="40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource Elementbackground}"
                Click="SI_Click"
                Style="{StaticResource Quizz_button}">
                <StackPanel>
                    <fs:IconImage
                        Width="50"
                        Height="50"
                        Foreground="{StaticResource Iconcolor}"
                        Icon="UsersGear"
                        Style="{StaticResource NewMButtonIcon}" />
                    <TextBlock
                        Margin="0,20,0,0"
                        VerticalAlignment="Bottom"
                        Foreground="{StaticResource Textcolor}"
                        Style="{StaticResource NewMButtonText}"
                        Text="SI"
                        TextAlignment="Center" />
                </StackPanel>
            </RadioButton>

            <RadioButton
                x:Name="All"
                Grid.Row="1"
                Grid.Column="1"
                Width="250"
                Height="230"
                Margin="40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource Elementbackground}"
                Click="All_Click"
                Style="{StaticResource Quizz_button}">
                <StackPanel>
                    <fs:IconImage
                        Width="50"
                        Height="50"
                        Foreground="{StaticResource Iconcolor}"
                        Icon="UserPen"
                        Style="{StaticResource NewMButtonIcon}" />
                    <TextBlock
                        Margin="0,20,0,0"
                        VerticalAlignment="Bottom"
                        Foreground="{StaticResource Textcolor}"
                        Style="{StaticResource NewMButtonText}"
                        Text="All"
                        TextAlignment="Center" />
                </StackPanel>
            </RadioButton>
        </Grid>



        <!--  ########################################################## Panel d'affichage des différents quizz proposés  -->



        <Grid x:Name="Quizzgrid" Visibility="Collapsed">
            <DockPanel Margin="30">
                <Button
                    x:Name="Back_btn"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Left"
                    Click="Back_btn_Click"
                    DockPanel.Dock="Top"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}">
                    <StackPanel Orientation="Horizontal">
                        <fs:IconImage
                            Width="20"
                            Height="20"
                            Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Foreground}"
                            Icon="ArrowLeft" />
                        <TextBlock
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Text="Matières" />
                    </StackPanel>
                </Button>

                <ListBox
                    x:Name="Testbox"
                    Margin="0,30,0,0"
                    Background="{StaticResource Elementbackground}"
                    DockPanel.Dock="Top"
                    FontSize="12"
                    Foreground="{StaticResource Textcolor}"
                    MouseDoubleClick="Testbox_MouseDoubleClick"
                    Style="{StaticResource MaterialDesignListBox}" />
            </DockPanel>

        </Grid>



        <!--  ########################################################## Panel d'affichage question / réponse  -->




        <Grid x:Name="Question" Visibility="Collapsed">
            <DockPanel Height="100" VerticalAlignment="Top">
                <Button
                    x:Name="Back_quizz"
                    Width="120"
                    Height="50"
                    Margin="30,0,0,0"
                    HorizontalAlignment="Left"
                    Click="Back_quizz_Click"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}">

                    <StackPanel Orientation="Horizontal">
                        <fs:IconImage
                            Width="20"
                            Height="20"
                            Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Foreground}"
                            Icon="ArrowLeft" />
                        <TextBlock
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Text="Matières" />
                    </StackPanel>
                </Button>
            </DockPanel>
            <Grid MaxHeight="880" Margin="200,150,200,200">
                <DockPanel x:Name="Panelquizz">
                    <wv2:WebView2
                        x:Name="webviewques"
                        Height="150"
                        VerticalAlignment="Top"
                        DockPanel.Dock="Top"
                        Source="file:///C:/Users/Bastien/source/repos/Sophieandme/Sophieandme/Math.html"
                        Visibility="Visible" />
                    <wv2:WebView2
                        x:Name="webviewrep"
                        Height="150"
                        VerticalAlignment="Top"
                        DockPanel.Dock="Top"
                        Source="file:///C:/Users/Bastien/source/repos/Sophieandme/Sophieandme/Math.html"
                        Visibility="Visible" />
                </DockPanel>
            </Grid>
            <DockPanel Height="80" VerticalAlignment="Bottom">
                <Button
                    x:Name="Reponse_button"
                    Width="200"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Reponse_button_Click"
                    Content="Réponses"
                    DockPanel.Dock="Top"
                    Foreground="{StaticResource Textcolor}"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}" />
                <Button
                    x:Name="Next_button"
                    Width="200"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Next_button_Click"
                    Content="Next"
                    DockPanel.Dock="Top"
                    Foreground="{StaticResource Textcolor}"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    Visibility="Collapsed" />
                <TextBlock
                    x:Name="Count_text"
                    Width="120"
                    Height="50"
                    Margin="10,-13,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    FontSize="16"
                    Foreground="{StaticResource Textcolor}"
                    Text="Testvaleur" />


            </DockPanel>
        </Grid>

        <!--  ################################################################################   Ecran de fin de quizz  -->

        <Grid
            x:Name="Endquizz"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed">
            <DockPanel>
                <Button
                    x:Name="ViewResp"
                    Width="250"
                    Height="40"
                    VerticalAlignment="Center"
                    Click="ViewResp_Click"
                    Content="Afficher les réponses"
                    DockPanel.Dock="Left"
                    Foreground="{StaticResource Textcolor}"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                <Button
                    x:Name="Restart"
                    Width="250"
                    Height="40"
                    Margin="40,0,0,0"
                    VerticalAlignment="Center"
                    Click="Restart_Click"
                    Content="Recommencer"
                    DockPanel.Dock="Left"
                    Foreground="{StaticResource Textcolor}"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                <Button
                    x:Name="Return"
                    Width="250"
                    Height="40"
                    Margin="40,0,0,0"
                    VerticalAlignment="Center"
                    Click="Return_Click"
                    Content="Retour au matiéres"
                    DockPanel.Dock="Left"
                    Foreground="{StaticResource Textcolor}"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}" />
            </DockPanel>
        </Grid>

        <!--  ##~###########################################################################   Panel d'affichage de toutes les réponses  -->

        <Grid x:Name="allresp" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button
                x:Name="Back_quizz2"
                Grid.Row="0"
                Width="120"
                Height="50"
                Margin="30,0,0,0"
                HorizontalAlignment="Left"
                Click="Back_quizz_Click"
                Style="{StaticResource MaterialDesignOutlinedLightButton}">

                <StackPanel Orientation="Horizontal">
                    <fs:IconImage
                        Width="20"
                        Height="20"
                        Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Foreground}"
                        Icon="ArrowLeft" />
                    <TextBlock
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Text="Matières" />
                </StackPanel>
            </Button>
            <wv2:WebView2
                x:Name="webviewall"
                Grid.Row="1"
                Margin="30"
                Source="file:///C:/Users/Bastien/source/repos/Sophieandme/Sophieandme/Math.html"
                Visibility="Visible" />
        </Grid>

    </Grid>
</Page>
