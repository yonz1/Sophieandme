<Page
    x:Class="Sophieandme.Test.Testbutton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fs="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Sophieandme.Test"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Testbutton"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/ButtonStyle.xaml" />
                <ResourceDictionary Source="/Style/Dark_theme.xaml" />
                <ResourceDictionary Source="/Style/General.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <!--<Button Background="Black" Style="{StaticResource Round_quizzselect}" />-->
        <RadioButton
            Name="Quizz"
            Width="120"
            Margin="0,40,0,0"
            VerticalAlignment="Top"
            BorderBrush="MediumPurple"
            BorderThickness="10,0,0,0"
            
            DockPanel.Dock="Top"
            Foreground="Gainsboro"
            Style="{StaticResource NewMButtton}">
            <StackPanel Orientation="Horizontal">
                <fs:IconImage
                    Margin="35,0,0,0"
                    Foreground="{StaticResource Iconcolor}"
                    Icon="UserGraduate"
                    Style="{StaticResource NewMButtonIcon}" />
                <TextBlock
                    Margin="20,0,0,0"
                    Foreground="{StaticResource Textcolor}"
                    Style="{StaticResource NewMButtonText}"
                    Text="Quizz" />
            </StackPanel>
        </RadioButton>
    </Grid>
</Page>
