<Window
    x:Class="Sophieandme.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fs="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Sophieandme"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="740"
    AllowsTransparency="True"
    Background="#080709"
    FontFamily="{DynamicResource MaterialDesignFont}"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    TextElement.FontSize="10"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/ButtonStyle.xaml" />
                <ResourceDictionary Source="/Style/Dark_theme.xaml" />
                <ResourceDictionary Source="/Style/General.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource pageBackground}" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Background="{StaticResource Button_panel_color}" CornerRadius="10 10 10 10">
                <Grid Grid.Column="0">
                    <DockPanel>
                        <Rectangle
                            Width="90"
                            Height="90"
                            Margin="0,50,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            DockPanel.Dock="top">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="/images/Lofi_Girl_logo_2024-removebg-preview.png" />
                            </Rectangle.Fill>
                        </Rectangle>

                        <RadioButton
                            Name="Quizz"
                            Margin="0,40,0,0"
                            VerticalAlignment="Top"
                            Click="Quizz_Click"
                            DockPanel.Dock="Top"
                            Foreground="Gainsboro"
                            Style="{StaticResource NewMButtton}">
                            <StackPanel Orientation="Horizontal">
                                <fs:IconImage
                                    Margin="35,0,0,0"
                                    Foreground="{StaticResource Iconcolor}"
                                    Icon="UserGraduate"
                                    Style="{StaticResource NewMButtonIcon}" />
                                <TextBlock
                                    Margin="20,0,0,0"
                                    Foreground="{StaticResource Textcolor}"
                                    Style="{StaticResource NewMButtonText}"
                                    Text="Quizz" />
                            </StackPanel>
                        </RadioButton>
                        <RadioButton
                            Name="Markedval"
                            Margin="0,10,0,0"
                            VerticalAlignment="Top"
                            Click="Markedval_Click"
                            DockPanel.Dock="Top"
                            Foreground="Gainsboro"
                            Style="{StaticResource NewMButtton}">
                            <StackPanel Orientation="Horizontal">
                                <fs:IconImage
                                    Margin="35,0,0,0"
                                    Foreground="{StaticResource Iconcolor}"
                                    Icon="BookBookmark"
                                    Style="{StaticResource NewMButtonIcon}" />
                                <TextBlock
                                    Margin="20,0,0,0"
                                    Foreground="{StaticResource Textcolor}"
                                    Style="{StaticResource NewMButtonText}"
                                    Text="Marked" />
                            </StackPanel>
                        </RadioButton>


                        <Button
                            x:Name="Settings"
                            Height="50"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Settings_Click"
                            DockPanel.Dock="Bottom"
                            Style="{StaticResource MaterialDesignFlatDarkBgButton}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse
                                    Width="45"
                                    Height="45"
                                    Margin="0,0,15,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Right">
                                    <Ellipse.Fill>
                                        <ImageBrush x:Name="ProfilePict" />
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock
                                    x:Name="Userbtncontent"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    Text="Username" />
                            </StackPanel>

                        </Button>
                    </DockPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Background="#080709" />
            <Grid
                Grid.Column="2"
                Background="Transparent"
                Opacity="100">
                <Grid.RowDefinitions>
                    <RowDefinition Height="36" />
                    <RowDefinition Height="10" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    x:Name="Border_top"
                    Grid.Row="0"
                    Background="{StaticResource main_background}"
                    CornerRadius="10"
                    MouseDown="Grid_MouseDown">
                    <Grid
                        x:Name="Grid_top"
                        Grid.Row="0"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        MouseDown="Grid_MouseDown"
                        Visibility="Visible">
                        <DockPanel Grid.Row="0">
                            <Button
                                x:Name="Exit"
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="Exit_Click"
                                DockPanel.Dock="Right"
                                Style="{StaticResource TopButton}"
                                Tag="{StaticResource Exit}">
                                <fs:IconImage
                                    Width="20"
                                    Icon="Xmark"
                                    Style="{StaticResource TopButtonIcon}" />
                            </Button>
                            <Button
                                x:Name="Maximize"
                                Width="30"
                                Height="30"
                                Margin="-10,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="Maximize_Click"
                                DockPanel.Dock="Right"
                                Style="{StaticResource TopButton}"
                                Tag="{StaticResource Maximize}">
                                <fs:IconImage
                                    Width="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Icon="Expand"
                                    Style="{StaticResource TopButtonIcon}" />
                            </Button>

                            <Button
                                x:Name="Minimize"
                                Width="30"
                                Height="30"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="Minimize_Click"
                                DockPanel.Dock="Right"
                                Style="{StaticResource TopButton}"
                                Tag="{StaticResource Minimize}">
                                <fs:IconImage Icon="Minus" Style="{StaticResource TopButtonIcon}" />
                            </Button>

                        </DockPanel>
                    </Grid>
                </Border>
                <Border
                    Grid.Row="2"
                    Background="{StaticResource main_background}"
                    CornerRadius="10">
                    <Frame
                        Name="fcontainer"
                        Grid.Row="1"
                        BorderBrush="{StaticResource main_background}"
                        BorderThickness="0"
                        NavigationUIVisibility="Hidden" />
                </Border>


            </Grid>

        </Grid>
    </Border>

</Window>
