                <!--<Grid x:Name="Grid_login"  Visibility="Visible">-->

                <!--<Border Name="mask" Background="White" CornerRadius="0 30 0 0"/>-->
                <Label
                    x:Name="label"
                    Margin="0,80,500,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Style="{DynamicResource MaterialDesignLabel}"
                    Visibility="Visible">
                    <TextBlock TextDecorations="Underline"><Run Text="Login" /></TextBlock>
                </Label>
                <TextBox
                    x:Name="Usernamebox"
                    Grid.Column="0"
                    Width="300"
                    Height="50"
                    Margin="60,0,0,230"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Bottom"
                    materialDesign:HintAssist.Hint="Username"
                    materialDesign:ThemeAssist.Theme="Dark"
                    FontSize="15"
                    Foreground="White"
                    Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                    Visibility="Visible" />
                <PasswordBox
                    x:Name="PasswordBox"
                    Grid.Column="0"
                    Width="300"
                    Height="50"
                    Margin="60,90,0,140"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Bottom"
                    materialDesign:HintAssist.Hint="Password"
                    materialDesign:PasswordBoxAssist.PasswordMaskedIcon="AboutCircle"
                    materialDesign:ThemeAssist.Theme="Dark"
                    FontSize="15"
                    Foreground="White"
                    Style="{DynamicResource MaterialDesignFloatingHintRevealPasswordBox}"
                    Visibility="Visible" />
                <Button
                    x:Name="Login"
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="300"
                    Height="40"
                    Margin="60,0,0,210"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    materialDesign:ThemeAssist.Theme="Dark"
                    Click="Connect_Click"
                    Content="Login"
                    Foreground="White"
                    Visibility="Visible">
                    <Button.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="1" Color="#F8A4D8" />
                            <GradientStop Offset="0.25" Color="#6C63ff" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Rectangle
                    x:Name="Background"
                    Width="500"
                    HorizontalAlignment="Right"
                    RadiusX="20"
                    RadiusY="20">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="../milad-fakurian-_S-zZyQiOr8-unsplash.jpg" />
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle
                    x:Name="rectangle1"
                    Width="300"
                    Height="2"
                    Margin="60,250,10,0"
                    HorizontalAlignment="Left"
                    Fill="Gray"
                    Visibility="Visible" />
                <Button
                    x:Name="Register_btn"
                    Width="300"
                    Height="40"
                    Margin="60,400,0,0"
                    HorizontalAlignment="Left"
                    Content="Sign up"
                    Visibility="Visible">
                    <Button.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="1" Color="#F8A4D8" />
                            <GradientStop Offset="0.25" Color="#6C63ff" />
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="ButtonBase.Click">
                            <BeginStoryboard Storyboard="{StaticResource LogtoReg}" />
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
                <DockPanel
                    Grid.Column="0"
                    Width="300"
                    Height="35"
                    Margin="120,0,0,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom">
                    <CheckBox
                        x:Name="Stay_con"
                        Width="30"
                        Height="30"
                        Style="{StaticResource MaterialDesignActionLightCheckBox}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="{StaticResource Textcolor}"
                        Text="Rester connecter ? "
                        TextAlignment="Left" />


                </DockPanel>



                <Label
                    x:Name="label2"
                    Margin="0,40,500,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Style="{DynamicResource MaterialDesignLabel}"
                    Visibility="Hidden">
                    <TextBlock TextDecorations="Underline"><Run Text="Register" /></TextBlock>
                </Label>
                <TextBox
                    x:Name="textBox2"
                    Grid.Column="0"
                    Width="300"
                    Height="50"
                    Margin="60,0,0,260"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Bottom"
                    materialDesign:HintAssist.Hint="E-mail"
                    materialDesign:ThemeAssist.Theme="Dark"
                    FontSize="15"
                    Foreground="White"
                    Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                    Visibility="Hidden" />
                <TextBox
                    x:Name="textBox3"
                    Grid.Column="0"
                    Width="300"
                    Height="50"
                    Margin="60,0,0,100"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Bottom"
                    materialDesign:HintAssist.Hint="Username"
                    materialDesign:ThemeAssist.Theme="Dark"
                    FontSize="15"
                    Foreground="White"
                    Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                    Visibility="Hidden" />
                <PasswordBox
                    x:Name="textBox4"
                    Grid.Column="0"
                    Width="300"
                    Height="50"
                    Margin="60,90,0,40"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Bottom"
                    materialDesign:HintAssist.Hint="Password"
                    materialDesign:PasswordBoxAssist.PasswordMaskedIcon="AboutCircle"
                    materialDesign:ThemeAssist.Theme="Dark"
                    FontSize="15"
                    Foreground="White"
                    Style="{DynamicResource MaterialDesignFloatingHintRevealPasswordBox}"
                    Visibility="Hidden" />
                <Button
                    x:Name="Register"
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="300"
                    Height="40"
                    Margin="60,0,0,160"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    materialDesign:ThemeAssist.Theme="Dark"
                    Click="Connect_Click"
                    Content="Register"
                    Foreground="White"
                    Visibility="Hidden">
                    <Button.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="1" Color="#F8A4D8" />
                            <GradientStop Offset="0.25" Color="#6C63ff" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Rectangle
                    x:Name="rectangle"
                    Width="300"
                    Height="2"
                    Margin="60,350,10,0"
                    HorizontalAlignment="Left"
                    Fill="Gray"
                    Visibility="Hidden" />

                <Button
                    x:Name="sign"
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="300"
                    Height="40"
                    Margin="60,0,0,45"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    materialDesign:ThemeAssist.Theme="Dark"
                    Content="Sign in"
                    Foreground="White"
                    Visibility="Hidden">
                    <Button.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="1" Color="#F8A4D8" />
                            <GradientStop Offset="0.25" Color="#6C63ff" />
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="ButtonBase.Click">
                            <BeginStoryboard Storyboard="{StaticResource Regtolog}" />
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
                <Grid
                    x:Name="Grid_down"
                    Height="40"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    MouseDown="Grid_down_MouseDown"
                    Visibility="Visible">
                    <DockPanel>
                        <Button
                            x:Name="Exit"
                            Width="30"
                            Height="30"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Exit_Click"
                            DockPanel.Dock="Right"
                            Style="{StaticResource TopButton}"
                            Tag="{StaticResource Exit}">
                            <fs:IconImage
                                Width="20"
                                Icon="Xmark"
                                Style="{StaticResource TopButtonIcon}" />
                        </Button>

                        <Button
                            x:Name="Minimize"
                            Width="30"
                            Height="30"
                            Margin="10,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Minimize_Click"
                            DockPanel.Dock="Right"
                            Style="{StaticResource TopButton}"
                            Tag="{StaticResource Minimize}">
                            <fs:IconImage
                                Margin="0,10,0,0"
                                Icon="Minus"
                                Style="{StaticResource TopButtonIcon}" />
                        </Button>
                    </DockPanel>
                </Grid>

